<html>
    <head></head>
    <body>
        <h1>Table of Authors</h1>

        
        <table border="1" cellspacing="0" cellpadding="10">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>local</th>
                   >
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for agence in agences %}
                    <tr>
                        <td>{{ agence.id }}</td>
                        <td>{{ agence.name }}</td>
                        <td>{{ agence.local }}</td>
                       
                        <td>
                            <a href="{{ path('app_agence_edit', { 'id': agence.id }) }}">Edit</a>
                            <a href="{{ path('app_delete_agence', { 'id': agence.id }) }}" onclick="return confirm('Are you sure you want to delete this agence?');">Delete</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">No agences found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </body>
</html>